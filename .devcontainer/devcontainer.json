{
  "name": "T81 Foundation",
  "image": "mcr.microsoft.com/devcontainers/cpp:ubuntu-24.04",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "22"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    }
  },
  "postCreateCommand": "cmake -S . -B build && cmake --build build -j",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools",
        "ms-python.python",
        "ms-toolsai.jupyter"
      ],
      "settings": {
        "cmake.configureOnOpen": true
      }
    }
  },
  "remoteUser": "vscode"
}
